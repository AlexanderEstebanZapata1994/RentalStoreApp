@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "MovieList";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movie", null, new { @class="btn btn-primary"})
@if (Model.Count <= 0)
{
    <h3>There is no movies yet</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
}


